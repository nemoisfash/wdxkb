<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:websocket="http://www.springframework.org/schema/websocket"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans 
            http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
            http://www.springframework.org/schema/websocket
            http://www.springframework.org/schema/websocket/spring-websocket-4.0.xsd">
    <bean id="myHandler" class="cn.hxz.webapp.util.websocket.MyWsHandler" />
    <bean id="myWsInterceptor" class="cn.hxz.webapp.util.websocket.WebSocketInterceptor" />
    <websocket:handlers>
        <websocket:mapping path="/ws.html" handler="myHandler"/>
        <websocket:handshake-interceptors>
            <ref bean="myWsInterceptor"/>
        </websocket:handshake-interceptors>
    </websocket:handlers>
    <websocket:handlers>
        <websocket:mapping path="/ws/socketjs.html" handler="myHandler"/>
         <websocket:handshake-interceptors>
            <ref bean="myWsInterceptor"/>
        </websocket:handshake-interceptors>
        <websocket:sockjs/>
    </websocket:handlers>
</beans> 
